@model CC.WebApp.ViewModels.Tools.ToolDetailsViewModel
@{
    ViewData["Title"] = "CC - Tool details";
}

<script language="JavaScript" type="text/javascript">
    $("#rent-btn").on("click", function (e) {
        e.preventDefault();
        $("#rent-form").submit();
    };
    $("#confirm-submit-btn").on("click", function (e) {
        e.preventDefault();
        $("#rent-form").submit();
    });
</script>

<div class="tool-details-page">

    @*Mobile*@
    <div class="mobile-card-container">
        <div class="card shadow-lg mobile-card">
            <img class="card-image-top" src="~/images/tool.jpg" alt="toolpicture"/>
            <div class="card-body shadow-lg">
                <h5 class="card-title">@Model.ToolName</h5>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                @if (User.Identity.IsAuthenticated)
                {
                    @using (Html.BeginForm("ToolDetails", "Tools", FormMethod.Post, new { @id = "rent-form" }))
                    {
                        @Html.HiddenFor(m => m.ToolId)
                        @Html.HiddenFor(m => m.Availability)
                        @Html.HiddenFor(m => m.ToolName)
                        if (Model.Availability)
                        {
                            <div class="card-rent-btn-container">
                                <button id="rent-btn" class="btn tool-details-btn tool-rent-btn shadow">Rent</button>
                                @Html.ActionLink("Go back", "Tools", "Tools", null, new { @class="btn tool-details-btn tool-back-btn shadow"})
                            </div>
                        }
                        else
                        {
                            <div class="card-rent-btn-container">
                                <button id="rent-btn" class="btn tool-details-btn tool-rent-btn shadow disabled">Not available</button>
                                @Html.ActionLink("Go back", "Tools", "Tools", null, new { @class="btn tool-details-btn tool-back-btn shadow"})
                            </div>
                        }
                    }
                }
                else
                {
                    <div class="card-rent-btn-container">
                        @Html.ActionLink("Go back", "Tools", "Tools", null, new { @class="btn tool-details-btn tool-back-btn shadow"})
                    </div>
                }
            </div>
        </div>
    </div>

    @*Ipad or desktop*@
    <div class="desktop-card-container">
        <div class="card shadow-lg">
            <div class="row g-0 p-3">
                <div class="col-md-4">
                        <img class="img-fluid rounded-start tool-details-img" src="~/images/tool.jpg" alt="toolpicture" />
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                    <h5 class="card-title">@Model.ToolName</h5>
                            <p class="card-text">
