                    </div>
                </div>
                @if (User.Identity.IsAuthenticated)
                {
                    @using (Html.BeginForm("ToolDetails", "Tools", FormMethod.Post, new { @id = "rent-form" }))
                    {
                        @Html.HiddenFor(m => m.ToolId)
                        @Html.HiddenFor(m => m.Availability)
                        @Html.HiddenFor(m => m.ToolName)
                        if (Model.Availability)
                        {
                            <div class="card-rent-btn-container">
                                <button id="rent-btn" class="btn tool-details-btn tool-rent-btn shadow">Rent</button>
                                @Html.ActionLink("Go back", "Tools", "Tools", null, new { @class="btn tool-details-btn tool-back-btn shadow"})
